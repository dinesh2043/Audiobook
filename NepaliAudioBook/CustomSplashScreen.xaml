<UserControl x:Class="NepaliAudioBook.CustomSplashScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="800" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="DarkSlateGray" Width="480" Height="800">
        <ProgressBar HorizontalAlignment="Left" Margin="54,709,0,68" Name="progressBar1" Width="383"  />
        <Image HorizontalAlignment="Left" Margin="0,0,0,137" Name="image1" Stretch="Fill" Width="480" Source="SplashScreenImage.jpg" />
        <TextBlock HorizontalAlignment="Left" Margin="166,673,0,97" Name="textBlock1" Text="Please Wait..." Width="143" Foreground="White" FontSize="22" />
    </Grid>
</UserControl>
